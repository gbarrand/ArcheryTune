#ifndef exlib_OpenGL
#define exlib_OpenGL

#ifdef EXLIB_NO_GL
#include <inlib/gldum/gl.h> //NOTE : not yet tried from inlib.
#else

#if defined(__APPLE__)
#include <TargetConditionals.h>
#endif

#if TARGET_OS_IPHONE
#include <OpenGLES/ES1/gl.h>
#elif ANDROID
#include <GLES/gl.h>
#elif WIN32
#include <windows.h>
#include <GL/gl.h>
#elif __APPLE__	
#include <OpenGL/gl.h> //Cocoa
#else
#include <GL/gl.h>
#endif

#endif //EXLIB_NO_GL

#endif
