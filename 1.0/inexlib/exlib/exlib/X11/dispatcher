#ifndef exlib_X11_dispatcher
#define exlib_X11_dispatcher

#include <X11/Xlib.h>

namespace exlib {
namespace X11 {

class dispatcher {
public:
  virtual ~dispatcher(){}
public:
  virtual bool dispatch(XEvent&) = 0;
  virtual Window window() const = 0; //to rm dispatcher.
  virtual dispatcher* copy() const = 0;
};

}}

#endif
