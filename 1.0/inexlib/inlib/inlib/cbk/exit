#ifndef inlib_cbk_exit
#define inlib_cbk_exit

#include "../sg/ui"

namespace inlib {
namespace cbk {

class exit : public sg::bcbk {
  typedef sg::bcbk parent;
public:
  virtual return_action action() {
    m_gv.set_to_exit();
    return return_none;     
  }
  virtual sg::bcbk* copy() const {return new exit(*this);}
public:
  exit(sg::ui& a_gv):parent(),m_gv(a_gv){}
  virtual ~exit(){}
public:
  exit(const exit& a_from):parent(a_from),m_gv(a_from.m_gv){}
  exit& operator=(const exit& a_from){
    parent::operator=(a_from);
    return *this;
  }
protected:
  sg::ui& m_gv;
};

}}

#endif
