#ifndef inlib_schar
#define inlib_schar

#include <string>

namespace inlib {

inline bool belong(const std::string& a_string,char a_c){
  std::string::const_iterator it;
  for(it=a_string.begin();it!=a_string.end();++it) {
    if((*it)==a_c) return true;
  }
  return false;
}

inline unsigned int numchar(const std::string& a_string,char a_c){
  unsigned int num = 0;  
  std::string::const_iterator it;
  for(it=a_string.begin();it!=a_string.end();++it) {
    if((*it)==a_c) num++;
  }
  return num;
}

}

#endif
