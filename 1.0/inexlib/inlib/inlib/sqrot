#ifndef inlib_sqrot
#define inlib_sqrot

#include "qrot"
#include "words"
#include "sto"

namespace inlib {

template <class T>
inline bool sqrot(const std::string& a_s,qrot<T>& a_rot) {
  std::vector<std::string> words;
  inlib::words(a_s," ",false,words);
  if(words.size()!=4) return false;
  T x,y,z,a;
  if(!to<T>(words[0],x)) return false;
  if(!to<T>(words[1],y)) return false;
  if(!to<T>(words[2],z)) return false;
  if(!to<T>(words[3],a)) return false;
  a_rot.set_value(vec3<T>(x,y,z),a);
  return true;
}

}

#endif

