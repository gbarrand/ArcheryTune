  void _create_diapo_scene(float a_hcam,bool a_same,bool a_one_screen) {
    // create a new scene of its own. (Anyway the static_sg is cleared at each diapo).
    //m_gv.clear_scene();
    //if(!is_evd()) {
      create_sg_evd(); //it does a clear scene.
      //evd_set_display();
      m_gv.set_plane_viewer(true);
      if(a_same) {
        m_gv.m_params.m_cam_tiled = a_one_screen;
      } else {
        m_gv.m_params.m_cam_tiled = false; //enforce one cam per screen.
      }
      replace_camera(m_gv.create_2D_camera(a_hcam));
    //}
  }

protected: //insh
  void _camera_set_ortho(const std::vector<std::string>& a_args) {
    if(a_args.empty()) {
      m_gv.insh().warn("inlib::sg::view_evd::_camera_set_ortho : one argument expected.");
      return;
    }
    float height;
    if(!m_gv.insh().get_arg_float("inlib::sg::view_evd::_camera_set_ortho",a_args[0],height)) return;
    inlib::sg::ortho* camera = new inlib::sg::ortho();
    camera->height = height;
    replace_camera(camera);
  }
  static const std::string& _camera_set_ortho_help() {
    static const std::string s_help("\
camera_set_ortho: camera_set_ortho height\n\
  Replace the current camera by an orthographic camera of given height.\n\
  Example:\n\
    camera_set_ortho 4\n\
");
    return s_help;
  }

  void _camera_set_perspective(const std::vector<std::string>& a_args) {
    if(a_args.empty()) {
      m_gv.insh().warn("inlib::sg::view_evd::_camera_set_perspective : one argument expected.");
      return;
    }
    float height_angle;
    if(!m_gv.insh().get_arg_float("inlib::sg::view_evd::_camera_set_perspective",a_args[0],height_angle)) return;
    inlib::sg::perspective* camera = new inlib::sg::perspective();
    camera->height_angle = height_angle;
    replace_camera(camera);
  }
  static const std::string& _camera_set_perspective_help() {
    static const std::string s_help("\
camera_set_perspective: camera_set_perspective angle\n\
  Replace the current camera by a perspective camera with angle (in radians) height_angle.\n\
  Example:\n\
    camera_set_perspective 0.785  # pi/4.\n\
");
    return s_help;
  }

  static const std::string& scene_write_static_to_bsg_help() {
    static const std::string s_help("\
scene_write_static_to_bsg: scene_write_static_to_bsg [-out_dir] file\n\
  Write the static scene graph to a bsg (binary file format) file.\n\
  If no directory is given in file, the -out_dir option permits to prepend the\n\
  application output directory to file.\n\
  See also: app_dir -out_dir\n\
  Example:\n\
    scene_write_static_to_bsg -out_dir my_scene.bsg\n\
");
    return s_help;
  }
  static const std::string& scene_write_dynamic_to_bsg_help() {
    static const std::string s_help("\
scene_write_dynamic_to_bsg: scene_write_dynamic_to_bsg [-out_dir] file\n\
  Write the dynamic scene graph to a bsg (binary file format) file.\n\
  If no directory is given in file, the -out_dir option permits to prepend the\n\
  application output directory to file.\n\
  See also: app_dir -out_dir\n\
  Example:\n\
    scene_write_dynamic_to_bsg -out_dir my_scene.bsg\n\
");
    return s_help;
  }

  INLIB_INSH_VOID_ARGS_CMD(view_evd)
  INLIB_INSH_BOOL_VOID_CMD(view_evd)
  INLIB_INSH_VOID_VOID_CMD(view_evd)

#define INLIB_VIEW_EVD_ADD_VOID_ARGS_CMD(a__name,a__method,a__help)\
   m_gv.insh().add_command(#a__name,new view_evd_void_args_cmd(*this,&view_evd::a__method,a__help));

  INLIB_INSH_CLASS_CMD(view_evd,scene_clear_static,m_holder.static_sg().clear(),"scene_clear_static: scene_clear_static\n  Clear the static scene graph.\n")
  INLIB_INSH_CLASS_CMD(view_evd,scene_clear_dynamic,m_holder.dynamic_sg().clear(),"scene_clear_dynamic: scene_clear_dynamic\n  Clear the dynamic scene graph.\n")
  INLIB_INSH_CLASS_CMD(view_evd,scene_clear_static_blend,m_holder.static_blend_sg().clear(),"scene_clear_static_blend: scene_clear_static_blend\n  Clear the static blend scene graph.\n")
//INLIB_INSH_CLASS_CMD(view_evd,scene_clear_screen,m_holder.screen_sg().clear(),insh::no_help())
  INLIB_INSH_CLASS_CMD(view_evd,scene_write_static_to_bsg,sg::gui_viewer::_node_to_bsg(m_holder.m_gv,a_args,m_holder.static_sg()),scene_write_static_to_bsg_help())
  INLIB_INSH_CLASS_CMD(view_evd,scene_write_dynamic_to_bsg,sg::gui_viewer::_node_to_bsg(m_holder.m_gv,a_args,m_holder.dynamic_sg()),scene_write_dynamic_to_bsg_help())
  void insh_add_cmds() {
    INLIB_VIEW_EVD_ADD_VOID_ARGS_CMD(camera_set_ortho,_camera_set_ortho,_camera_set_ortho_help)
    INLIB_VIEW_EVD_ADD_VOID_ARGS_CMD(camera_set_perspective,_camera_set_perspective,_camera_set_perspective_help)
    INLIB_INSH_ADD_CMD(m_gv.insh(),*this,scene_clear_static)
    INLIB_INSH_ADD_CMD(m_gv.insh(),*this,scene_clear_dynamic)
    INLIB_INSH_ADD_CMD(m_gv.insh(),*this,scene_clear_static_blend)
  //INLIB_INSH_ADD_CMD(m_gv.insh(),*this,scene_clear_screen)
    INLIB_INSH_ADD_CMD(m_gv.insh(),*this,scene_write_static_to_bsg)
    INLIB_INSH_ADD_CMD(m_gv.insh(),*this,scene_write_dynamic_to_bsg)
  }

#undef INLIB_VIEW_EVD_ADD_VOID_ARGS_CMD

private:
  gui_viewer& m_gv;
  head_light m_light;
  blend m_blend;
  shade_model m_shade_model;
  matrix m_layout;
  separator m_static_sg;
  separator m_dynamic_sg;
  separator m_static_sg_blend;
  separator m_screen_sg; //if wall app.
  unsigned int m_event_index;
  unsigned int m_next_event_sleep;
  cmaps_t m_cmaps;
};

inline view_evd* cast_view_evd(viewer& a_viewer) {
  return safe_cast<viewer,view_evd>(a_viewer);
}

/////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////
inline void set_empty_scene_3D(gui_viewer& a_gv,view_evd& a_evd) {
  if(!a_evd.is_evd()) {
    a_evd.create_sg_evd();
    a_evd.replace_camera(a_gv.create_3D_camera(2));
  }
  a_evd.static_sg().clear();
  a_evd.dynamic_sg().clear();
  a_evd.screen_sg().clear();

  a_gv.set_param_viewing(false);
  //a_gv.show_camera_menu();
  a_gv.hide_main_menu();
}

inline void set_empty_scene_2D(gui_viewer& a_gv,view_evd& a_evd) {
  if(!a_evd.is_evd()) {
    a_evd.create_sg_evd();
    a_evd.replace_camera(a_gv.create_2D_camera(2));
  }
  a_gv.set_plane_viewer(true);

  a_evd.static_sg().clear();
  a_evd.dynamic_sg().clear();
  a_evd.screen_sg().clear();

  a_gv.set_param_viewing(false);
  //a_gv.show_camera_menu();
  a_gv.hide_main_menu();
}

/////////////////////////////////////////////////////////////////////////////
/// actions : ///////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////

inline return_action action_clear_static_sg(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  _evd->static_sg().clear();
  return return_to_render;
}

inline return_action action_clear_dynamic_sg(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  _evd->dynamic_sg().clear();
  return return_to_render;
}

inline return_action action_clear_static_and_dynamic_sg(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  _evd->static_sg().clear();
  _evd->dynamic_sg().clear();
  return return_to_render;
}

inline return_action action_clear_screen_sg(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  _evd->screen_sg().clear();
  return return_to_render;
}

inline return_action action_empty_scene_3D(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  set_empty_scene_3D(a_gv,*_evd);
  return return_to_render;
}

inline return_action action_empty_scene_2D(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  set_empty_scene_2D(a_gv,*_evd);
  return return_to_render;
}

inline return_action action_static_to_vertices(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  a_gv.separator_to_vertices(_evd->static_sg());
  a_gv.hide_main_menu();
  return return_to_render;
}

inline return_action action_dynamic_to_vertices(gui_viewer& a_gv) {
  view_evd* _evd = cast_view_evd(a_gv);
  if(!_evd) return return_none;
  a_gv.separator_to_vertices(_evd->dynamic_sg());
  a_gv.hide_main_menu();
  return return_to_render;
}

inline return_action action_menu_utils(gui_viewer& a_gv) {
  action_utils(a_gv);
  node* _node = a_gv.current_list();
  if(!_node) return return_none;
  list* _list = safe_cast<node,list>(*_node);
  if(!_list) return return_none;
  add_white_item(a_gv,*_list,"static sg to pts,lns,tris",action_static_to_vertices);
  add_white_item(a_gv,*_list,"dynamic sg to pts,lns,tris",action_dynamic_to_vertices);
  return return_to_render;
}

